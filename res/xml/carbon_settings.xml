<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/carbon_settings_title">

    <PreferenceScreen android:key="carbon_logo"
                      android:layout="@layout/logo_row" />

    <PreferenceCategory android:key="carbon_settings_category"
        android:title="@string/carbon_settings_title_menu">

    <!-- About CarbonRom -->
    <PreferenceScreen
        android:id="@+id/about_rom"
        android:title="@string/title_about"
        android:icon="@drawable/ic_settings_about_carbon"
        android:fragment="com.android.settings.carbon.About" />

    <!-- Interface -->
    <PreferenceScreen
        android:id="@+id/interface_settings"
        android:title="@string/interface_title"
        android:icon="@drawable/ic_carbon_interface"
        android:fragment="com.android.settings.carbon.InterfaceSettings" />

    <!-- Lockscreen -->
    <PreferenceScreen
        android:id="@+id/lock_screen_settings"
        android:title="@string/lock_screen_title"
        android:icon="@drawable/ic_carbon_lockscreen"
        android:fragment="com.android.settings.carbon.LockscreenInterface" />

    <!-- Navigation -->
    <PreferenceScreen
        android:id="@+id/nav_bar"
        android:title="@string/navbar_title"
        android:icon="@drawable/ic_carbon_navbar"
        android:fragment="com.android.settings.carbon.Navbar" />

    <!-- Pie Controls -->
    <PreferenceScreen
        android:id="@+id/pie_controls"
        android:title="@string/pie_controls_title"
        android:icon="@drawable/ic_carbon_pie"
        android:fragment="com.android.settings.carbon.Pie" />

    <!-- Powermenu -->
    <PreferenceScreen
        android:id="@+id/power_menu_settings"
        android:title="@string/power_menu_title"
        android:icon="@drawable/ic_carbon_powermenu"
        android:fragment="com.android.settings.carbon.PowerMenu" />

    <!-- Powerwidget -->
    <PreferenceScreen
        android:id="@+id/power_widget_settings"
        android:title="@string/power_widget_title"
        android:icon="@drawable/ic_carbon_powerwidget"
        android:fragment="com.android.settings.carbon.PowerWidget" />

    <!-- Statusbar -->
    <PreferenceScreen
        android:id="@+id/status_bar_settings"
        android:title="@string/status_bar_title"
        android:icon="@drawable/ic_carbon_statusbar"
        android:fragment="com.android.settings.carbon.StatusBar" />

    <!-- Statusbar Toggles -->
    <PreferenceScreen
        android:id="@+id/statusbar_toggles"
        android:title="@string/toggles_title"
        android:icon="@drawable/ic_carbon_quicksettings"
        android:fragment="com.android.settings.carbon.StatusBarToggles" />

    <!-- Xposed -->
    <PreferenceScreen
        android:id="@+id/xposed_settings"
        android:title="@string/xposed_settings_title"
        android:fragment="com.android.settings.carbon.XposedSettings"
        android:icon="@drawable/ic_carbon_xposed" />


    </PreferenceCategory>

</PreferenceScreen>
